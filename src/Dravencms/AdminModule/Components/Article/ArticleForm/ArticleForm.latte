<form n:name="form" class="panel form-horizontal">
    <ul class="alert alert-danger" n:if="$form->hasErrors()">
        <li n:foreach="$form->errors as $error">{$error}</li>
    </ul>
    <div class="panel-body">
        <ul class="nav nav-tabs" role="tablist">
            <li n:foreach="$activeLocales AS $activeLocale" role="presentation" n:class="$activeLocale->isDefault() ? active"><a href="#{$activeLocale->getLanguageCode()}" aria-controls="home"
                                                                                                                                 role="tab" data-toggle="tab"><span
                            class="flag-icon flag-icon-{$activeLocale->getCountry()->getCode()|lower}"></span> {$activeLocale->getName()}</a></li>
        </ul>
        <div class="tab-content">
            <div n:foreach="$activeLocales AS $activeLocale" role="tabpanel" n:class="$activeLocale->isDefault() ? active, tab-pane" id="{$activeLocale->getLanguageCode()}">
                {formContainer $activeLocale->getLanguageCode()}
                    <fieldset>
                        <legend>{$activeLocale->getName()}</legend>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group no-margin-hr">
                                    <label class="control-label" n:name="name">{_"article.name"}</label>
                                    <input type="text" n:name="name" autofocus="autofocus" class="form-control">
                                </div>
                            </div><!-- col-sm-12 -->
                        </div><!-- row -->

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group no-margin-hr">
                                    <label class="control-label" n:name="perex">{_"article.perex"}</label>
                                    <textarea n:name="perex" class="form-control{if $group->isPerexWysiwig()} wysiwyg{/if}"></textarea>
                                </div>
                            </div><!-- col-sm-12 -->
                        </div><!-- row -->

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group no-margin-hr">
                                    <label class="control-label" n:name="text">{_"article.text"}</label>
                                    <textarea n:name="text" class="form-control wysiwyg"></textarea>
                                </div>
                            </div><!-- col-sm-12 -->
                        </div><!-- row -->
                    </fieldset>
                {/formContainer}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group no-margin-hr">
                    <label class="control-label" n:name="identifier">{_"article.identifier"}</label>
                    <input n:name="identifier" class="form-control">
                </div>
            </div><!-- col-sm-6 -->
            <div class="col-sm-6">
                <div class="form-group no-margin-hr">
                    <label class="control-label" n:name="position">{_"article.position"}</label>
                    <input n:name="position" class="form-control">
                </div>
            </div><!-- col-sm-6 -->
        </div><!-- row -->

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group no-margin-hr">
                    <label class="control-label" n:name="tags">{_"article.tags"}</label>
                    <select n:name="tags" class="form-control"></select>
                </div>
            </div><!-- col-sm-6 -->
            <div class="col-sm-6">
                <div class="form-group no-margin-hr">
                    <label class="control-label" n:name="createdAt">{_"article.createdAt"}</label>
                    <input n:name="createdAt" class="form-control date" data-format="{$dateTimeFormat}">
                </div>
            </div><!-- col-sm-6 -->
        </div><!-- row -->

        <div class="row">
            <div class="col-sm-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" n:name="isActive" class="px"> <span class="lbl">{_"article.isActive"}</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" n:name="isShowName" class="px"> <span class="lbl">{_"article.isShowName"}</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" n:name="isAutoDetectTags" class="px"> <span class="lbl">{_"article.isAutoDetectTags"}</span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-footer">
        <input type="submit" n:name="send" class="btn btn-success button" value="{_"article.save"}">
    </div>
</form>